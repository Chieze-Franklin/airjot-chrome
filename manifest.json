{
    "name": "AirJot",
    "version": "0.0.1",
    "description": "A Chrome plugin that allows one to leave notes on any webpage",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "src/pages/home.html",
        "default_icon": {
            "16": "src/images/icon.png",
            "32": "src/images/icon.png",
            "48": "src/images/icon.png",
            "128": "src/images/icon.png"
        }
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens the home page"
        }
    },
    "background": {
        "scripts": [
            "src/main.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "src/images/icon.png",
        "32": "src/images/icon.png",
        "48": "src/images/icon.png",
        "128": "src/images/icon.png"
    }
}